@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Cart Page";
}

@namespace INF27507_Boutique_En_Ligne.Models
@model List<CartItem>

<h1 class="display-4">Cart</h1>

<div class="row mt-2 mb-2">
    <div class="col">
        @{
            foreach(CartItem item in @Model)
            {
                <partial name="_CartItem" model=item />
            }
        }
    </div>
</div>

<div class="row mt-2 mb-2">
    <h2>Cart Total : @string.Format("{0:C}", ViewBag.CartTotal)</h2>
</div>

<div class="row mt-2 mb-2">
    <div class="col-sm-10"></div>
    <div class="col-sm-2">
        <a class="btn btn-primary col-12" asp-controller="Payment" asp-action="PaymentPage">Checkout</a>
    </div>
</div>