@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit a product";
}

@namespace INF27507_Boutique_En_Ligne.Models
@model ProductUpdate

<h1 class="display-4 mt-4 mb-4">Edit a product</h1>

<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-9 col-xl-7">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        <h2 class="text-uppercase text-center mb-5">Product information</h2>
                            
                        @if (ViewData.ContainsKey("valid"))
                        {
                            if ((bool) ViewData["valid"]!)
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                                    </symbol>
                                </svg>
                                <div class="alert alert-success d-flex align-items-center" role="alert">
                                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                                    <div>
                                        Les modifications apportées ont bien été sauvegardées !
                                    </div>
                                </div>
                            }
                            else
                            {
                                <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
                                    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                    </symbol>
                                </svg>
                                <div class="alert alert-danger d-flex align-items-center" role="alert">
                                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                                    <div>
                                        Impossible de sauvegarder les infos, veuillez les vérifier !
                                    </div>
                                </div>
                            }
                        }

                        <form asp-controller="Product" asp-action="Edit" method="post">
                            <input asp-for="Id" type="hidden" value="@ViewBag.Product.Id" />

                            <div class="form-outline mb-4">
                                <input type="text" asp-for="Title" class="form-control form-control-lg" value="@ViewBag.Product.Title" />
                                <label class="form-label" asp-for="Title">Title</label>
                                <span class="text-danger" asp-validation-for="Title"></span>
                            </div>
                                
                            <div class="form-outline mb-4">
                                <input type="number" asp-for="Price" class="form-control form-control-lg" value="@ViewBag.Product.Price" />
                                <label class="form-label" asp-for="Price">Price</label>
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>
                                
                            <div class="form-outline mb-4">
                                <input type="number" asp-for="Quantity" class="form-control form-control-lg" value="10" />
                                <label class="form-label" asp-for="Quantity">Quantity</label>
                                <span class="text-danger" asp-validation-for="Quantity"></span>
                            </div>
                                
                            <div class="row gx-4">
                                <button asp-controller="Home" asp-action="Index" class="d-grid gap-2 col m-2 p-2 btn btn-danger">
                                    Back to store
                                </button>
                                <button type="submit" class="d-grid gap-2 col m-2 p-2 btn btn-success">
                                    Update
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>