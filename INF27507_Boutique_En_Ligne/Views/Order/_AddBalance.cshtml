@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="d-flex justify-content-between mt-5">
    <strong>Current balance : @ViewData["solde"]</strong>
    <div>
        <form asp-controller="Order" asp-action="AddBalance" method="get" class="row">
            <div class="form-outline mb-4 me-2 col">
                <input type="number" name="newBalance" id="newBalance" value="0" min="0" class="form-control form-control-lg"/>
            </div>

            <div class="col">
                <button type="submit" class="btn btn-success">Add</button>
            </div>
        </form>
    </div>
</div>